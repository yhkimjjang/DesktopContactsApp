<Application x:Class="DesktopContactsApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopContactsApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBox" x:Key="defaultTextBoxsStyle">
            <Setter Property="Margin" Value="0, 0, 0, 10"/>
        </Style>
        <Style TargetType="Button" x:Key="defaultButtonsStyle">
            <Setter Property="Margin" Value="0, 0, 0, 10"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource defaultButtonsStyle}" x:Key="deleteButtonsStyle">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
